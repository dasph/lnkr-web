{
  "name": "lnkr-web",
  "type": "module",
  "private": true,
  "version": "0.0.1",
  "description": "A web client for the blazingly fast, minimalistic link shortener.",
  "scripts": {
    "dev": "vite",
    "serve": "vite preview --outDir ./dist/client",
    "build:client": "vite build -m client",
    "build:server": "vite build -m server",
    "build:pages": "node ./dist/server",
    "build": "pnpm build:client && pnpm build:server && pnpm build:pages"
  },
  "license": "MIT",
  "dependencies": {
    "@simplewebauthn/browser": "^10.0.0",
    "@solidjs/router": "^0.13.3",
    "solid-js": "^1.8.17"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "sass": "^1.77.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.12",
    "vite-plugin-solid": "^2.10.2"
  }
}
